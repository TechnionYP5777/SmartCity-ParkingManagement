<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.driver.app.LoginContorller">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox alignment="BOTTOM_CENTER" prefHeight="125.0" prefWidth="400.0" style="-fx-background-color: #607d8b;">
               <children>
                  <Label text="Welcome" textFill="WHITE">
                     <font>
                        <Font size="50.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="10.0" />
                     </HBox.margin></Label>
               </children></HBox>
            <TextField fx:id="idField" prefHeight="40.0" prefWidth="280.0" promptText="Id">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="60.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font></TextField>
            <PasswordField fx:id="pwField" prefHeight="40.0" prefWidth="280.0" promptText="Password">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </PasswordField>
            <Hyperlink fx:id="forgotPwHyperLink" onAction="#forgotPwClicked" style="-fx-text-fill: #607d8b;" text="Forgot your password?">
               <VBox.margin>
                  <Insets left="20.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Hyperlink>
            <VBox alignment="TOP_CENTER" prefHeight="192.0" prefWidth="400.0">
               <children>
                  <Label fx:id="errorLabel" text="Id or password are wrong!" textFill="RED" visible="false">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginButtonClicked" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #607d8b;" text="LOG IN" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" top="15.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="createNewButton" mnemonicParsing="false" onAction="#createButtonClicked" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #F4F4F4; -fx-border-color: #607d8b;" text="REGISTER" textFill="#607d8b">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>
